# DataBridge Analytics V4 - Environment Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# GENERAL SETTINGS
# =============================================================================
DATABRIDGE_ENV=development
DATABRIDGE_DEBUG=false
DATABRIDGE_LOG_LEVEL=INFO

# =============================================================================
# V3 INTEGRATION
# =============================================================================
# URL to V3 Hierarchy Builder API
V3_API_URL=http://localhost:8000
V3_API_KEY=

# =============================================================================
# DEFAULT DATA WAREHOUSE CONNECTION
# =============================================================================
# Supported types: snowflake, databricks, sqlserver, postgresql, mysql, oracle
DEFAULT_WAREHOUSE_TYPE=snowflake

# =============================================================================
# SNOWFLAKE CONNECTION
# =============================================================================
SNOWFLAKE_ACCOUNT=
SNOWFLAKE_USER=
SNOWFLAKE_PASSWORD=
SNOWFLAKE_WAREHOUSE=COMPUTE_WH
SNOWFLAKE_DATABASE=ANALYTICS
SNOWFLAKE_SCHEMA=PUBLIC
SNOWFLAKE_ROLE=ANALYST

# For key pair authentication (recommended for production)
SNOWFLAKE_PRIVATE_KEY_PATH=
SNOWFLAKE_PRIVATE_KEY_PASSPHRASE=

# =============================================================================
# DATABRICKS CONNECTION
# =============================================================================
DATABRICKS_HOST=
DATABRICKS_TOKEN=
DATABRICKS_HTTP_PATH=
DATABRICKS_CATALOG=
DATABRICKS_SCHEMA=

# =============================================================================
# SQL SERVER CONNECTION
# =============================================================================
SQLSERVER_HOST=
SQLSERVER_PORT=1433
SQLSERVER_DATABASE=
SQLSERVER_USER=
SQLSERVER_PASSWORD=

# =============================================================================
# POSTGRESQL CONNECTION
# =============================================================================
POSTGRESQL_HOST=localhost
POSTGRESQL_PORT=5432
POSTGRESQL_DATABASE=databridge_analytics
POSTGRESQL_USER=postgres
POSTGRESQL_PASSWORD=

# =============================================================================
# MYSQL CONNECTION
# =============================================================================
MYSQL_HOST=
MYSQL_PORT=3306
MYSQL_DATABASE=
MYSQL_USER=
MYSQL_PASSWORD=

# =============================================================================
# ORACLE CONNECTION
# =============================================================================
ORACLE_HOST=
ORACLE_PORT=1521
ORACLE_SERVICE_NAME=
ORACLE_USER=
ORACLE_PASSWORD=

# =============================================================================
# VECTOR STORE (ChromaDB)
# =============================================================================
CHROMADB_PATH=./data/chroma
CHROMADB_COLLECTION_PREFIX=databridge_v4_
EMBEDDING_MODEL=all-MiniLM-L6-v2

# =============================================================================
# NLP SETTINGS
# =============================================================================
SPACY_MODEL=en_core_web_sm
NL_TO_SQL_CONFIDENCE_THRESHOLD=0.7

# =============================================================================
# ANALYTICS SETTINGS
# =============================================================================
ANOMALY_ZSCORE_THRESHOLD=3.0
TREND_MIN_PERIODS=6
VARIANCE_MATERIALITY_THRESHOLD=0.05

# =============================================================================
# WORKFLOW SETTINGS
# =============================================================================
CLOSE_CHECKLIST_TEMPLATE=default
FORECAST_HORIZON_MONTHS=12
SCENARIO_DEFAULT_COUNT=3

# =============================================================================
# CACHE SETTINGS (Redis)
# =============================================================================
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=3600

# =============================================================================
# SECURITY
# =============================================================================
# Master encryption key for credentials
SECURITY_MASTER_KEY=

# API key for external access
API_KEY=

# Two-factor authentication
TWO_FACTOR_ENABLED=false
TWO_FACTOR_ISSUER=DataBridge Analytics
