# ===========================================
# DataBridge AI Librarian - Environment Configuration
# ===========================================
# Copy this file to .env and update values as needed
# ===========================================

# -----------------
# Core Settings
# -----------------
DATABRIDGE_DEBUG=false

# -----------------
# Database Settings
# -----------------
DATABRIDGE_DB_PATH=data/databridge.db
DATABRIDGE_DB_ECHO_SQL=false
DATABRIDGE_DB_POOL_SIZE=5

# -----------------
# Data Settings
# -----------------
DATABRIDGE_DATA_DIR=data
DATABRIDGE_DATA_AUDIT_LOG=data/audit_trail.csv
DATABRIDGE_DATA_WORKFLOW_FILE=data/workflow.json
DATABRIDGE_DATA_MAX_ROWS_DISPLAY=10

# -----------------
# Fuzzy Matching
# -----------------
DATABRIDGE_FUZZY_THRESHOLD=80
DATABRIDGE_FUZZY_SCORER=WRatio

# -----------------
# Vector Embeddings
# -----------------
DATABRIDGE_VECTOR_PROVIDER=sentence-transformers
DATABRIDGE_VECTOR_MODEL=all-MiniLM-L6-v2
DATABRIDGE_VECTOR_DB_PATH=data/vectors
DATABRIDGE_VECTOR_TOP_K=10

# -----------------
# V2 Backend Sync (Optional)
# -----------------
NESTJS_ENABLED=false
NESTJS_URL=http://localhost:3002/api
NESTJS_API_KEY=v2-dev-key-1
NESTJS_TIMEOUT=30

# -----------------
# Snowflake (Optional)
# -----------------
SNOWFLAKE_ACCOUNT=
SNOWFLAKE_USER=
SNOWFLAKE_PASSWORD=
SNOWFLAKE_WAREHOUSE=
SNOWFLAKE_DATABASE=
SNOWFLAKE_SCHEMA=
SNOWFLAKE_ROLE=
SNOWFLAKE_PRIVATE_KEY_PATH=

# -----------------
# Security
# -----------------
# Generate a secure master key: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
DATABRIDGE_SECURITY_MASTER_KEY=
DATABRIDGE_SECURITY_TWO_FACTOR_ENABLED=false
DATABRIDGE_SECURITY_API_KEY_PREFIX=db_

# -----------------
# OCR (Optional)
# -----------------
TESSERACT_PATH=C:/Program Files/Tesseract-OCR/tesseract.exe

# -----------------
# OpenAI (Optional - for embeddings)
# -----------------
OPENAI_API_KEY=
